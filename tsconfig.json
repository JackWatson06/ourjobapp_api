{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "infa/*" : [ "src/core/infa/*" ],
            "services/*" : [ "src/core/services/*" ],
            "*": [
                "src/types/*",
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "database/**/*"
    ]
}