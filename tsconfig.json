{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "bootstrap/*" : [ "src/bootstrap/*" ],
            "modules/*"   : [ "src/modules/*" ],
            "db/*"        : [ "src/core/db/*" ],
            "infra/*"     : [ "src/core/infra/*" ],
            "notify/*"    : [ "src/core/notify/*" ],
            "payment/*"   : [ "src/core/payment/*" ],
            "template/*"  : [ "src/core/template/*" ],
            "*": [
                "src/types/*",
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "database/**/*",
        "tests/**/*"
    ]
}