<table>
    <thead>
        <tr>
        <th>Name</th>
        <th>Job</th>
        <th>Rate</th>
        <th>Location</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Authorized</th>
        <th>Remote</th>
        <th>Commitment</th>
        <th>Resume</th>
        <th>Hire</th>
