                <th>{{this.phone}}</th>     {{!-- Can come from the employee --}}
                <th>{{this.authorized}}</th> {{!-- Can come from the match --}}
                <th>{{this.remote}}</th>    {{!-- Can come from the employee --}}
                <th>{{this.commitment}}</th> {{!-- Can come from the employee --}} 
                <th>{{this.resume}}</th> {{!-- Can come from the employee --}}
                <th>{{this.paymentLink}}</th> {{!-- Can come from the employee --}}
            </tr>
        {{/each}}
